package shapesSVG;

public class Vector2{
    private double x;
    private double y;
    private double magnitud;
    public Vector2(double x, double y){
	this.x=x;
	this.y=y;
	this.magnitud=1;


    }
    public Vector2(){
	this.x=0;
	this.y=0;
	this.magnitud=1;

    }

    public  double distancia(Vector2 vec){
	
	double dis=Math.sqrt( Math.pow(vec.x-this.x,2)+Math.pow(vec.y-this.y,2) );
	return dis;
    }

        public  String toSVG(){
	    String svg= "<circle cx='"+this.x +"' cy='"+ this.y + "' r='5' stroke= 'yellow' stroke width='50' fill='green' />";
	    return svg;
    }

    @Override
   public String toString(){
	String salida="("+this.x+","+this.y+")";
	return salida;
    }
    
    public boolean equals(Vector2 vec){
	if(this.x==vec.x && this.y==vec.y){
	    return true;
	}
	else{
	    return false;
	}
    }
    
    public  double getX(){
	return this.x;
    }
    public void setX(double x){
	this.x=x;
    }
     public  double getY(){
	return this.y;
    }
    public  void setY(double x){
	this.y=x;
    }

 }
